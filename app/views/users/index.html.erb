<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Email</th>
      <th>Avatar path</th>
      <th>Memo</th>
      <th>Signatures</th>
      <th>Point</th>
      <th>Reg date</th>
      <th>Login date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td><%= user.avatar_path %></td>
        <td><%= user.memo %></td>
        <td><%= user.signatures %></td>
        <td><%= user.point %></td>
        <td><%= user.reg_date %></td>
        <td><%= user.login_date %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

