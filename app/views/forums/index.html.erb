<h1>Listing forums</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Intro</th>
      <th>Province</th>
      <th>City</th>
      <th>Club</th>
      <th>Topics num</th>
      <th>Order num</th>
      <th>Is systemic</th>
      <th>Icon path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.category_id %></td>
        <td><%= forum.name %></td>
        <td><%= forum.intro %></td>
        <td><%= forum.province_id %></td>
        <td><%= forum.city_id %></td>
        <td><%= forum.club_id %></td>
        <td><%= forum.topics_num %></td>
        <td><%= forum.order_num %></td>
        <td><%= forum.is_systemic %></td>
        <td><%= forum.icon_path %></td>
        <td><%= link_to 'Show', forum %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Forum', new_forum_path %>
