<h1>Listing topics</h1>

<table>
  <thead>
    <tr>
      <th>Forum</th>
      <th>Subject</th>
      <th>Title</th>
      <th>Title color</th>
      <th>User</th>
      <th>Is fixed</th>
      <th>Is good</th>
      <th>Is recommend</th>
      <th>Hits num</th>
      <th>Comments num</th>
      <th>Last comment user</th>
      <th>Last comment time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.forum_id %></td>
        <td><%= topic.subject_id %></td>
        <td><%= topic.title %></td>
        <td><%= topic.title_color %></td>
        <td><%= topic.user_id %></td>
        <td><%= topic.is_fixed %></td>
        <td><%= topic.is_good %></td>
        <td><%= topic.is_recommend %></td>
        <td><%= topic.hits_num %></td>
        <td><%= topic.comments_num %></td>
        <td><%= topic.last_comment_user_id %></td>
        <td><%= topic.last_comment_time %></td>
        <td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

